  <div class="row">
    <div class="small-8 columns post_form">
      <%= simple_form_for @post, url: posts_path, method: :post, remote: true do |f| %>
        <%= f.input :content, label: 'Add a post' %>
        <%= f.submit class: 'button new-post' %>
      <% end %>
    </div>
  </div>


  <div class='posts'>
    <% @posts.reverse.each do |post| %>
    <div class='post media'>
      <div class="media-img">
        <%= link_to (image_tag(post.user.image_url(:image))), user_path(post.user)%>
      </div>
      <div class ='media-body'>
      <h5><%= post.user.first_name %></h5>
        <p><%= post.content %></p>
        <ul class="inline-list post-actions">
          <li><%= link_to 'View Comments', post_path(post) %></li>
        </ul>
      </div>
    </div>
    <% end %>
  </div>




